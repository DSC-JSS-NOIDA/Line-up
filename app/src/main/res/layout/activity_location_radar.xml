        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/content"-->
        <!--app:rb_color="#0099CC"-->
        <!--app:rb_radius="32dp"-->
        <!--app:rb_rippleAmount="4"-->
        <!--app:rb_duration="3000"-->
        <!--app:rb_scale="6"/>-->

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        app:rb_color="#0099CC"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_duration="3000"
        app:rb_scale="6">



    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:id="@+id/player"
        android:layout_centerInParent="true"
        android:src="@drawable/female"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/player"
        android:orientation="vertical"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/female"
            android:id="@+id/player1_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50m"
            android:id="@+id/player1_distance"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/player"
        android:orientation="vertical"
        android:layout_marginStart="40dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/female"
            android:id="@+id/player2_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140m"
            android:id="@+id/player2_distance"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_above="@id/player"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/female"
            android:id="@+id/player3_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70m"
            android:id="@+id/player3_distance"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/player"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/female"
            android:id="@+id/player4_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100m"
            android:id="@+id/player4_distance"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line-up Radar"
        android:id="@+id/title_radar"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_radar"
        android:text="You can find four players that are within 200m radius."
        android:textSize="18sp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_thin"
        android:textColor="@color/text_two"
        android:layout_marginStart="30dp"/>

    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>